---
import { SITE } from "@values/consts";
---
<!-- TODO: NAVBAR FOR MOBILE LAYOUT --> 
<header>
  <div class="bg-accent flex items-center place-content-center space-x-2 px-5" aria-label="badge">
      <span class="font-main text-md">Call us and get a free quote:</span>
      <span class="font-main text-md">{SITE.TELEPHONE}</span>
  </div>

  <!-- Header for mobile devices -->
<div class="navbar md:hidden bg-base-100">
  <div class="flex-1">
    <a class="text-xl font-main px-4">Logo</a>
    <span class="text-xl font-main">{SITE.COMPANY}</span>
  </div>
  <div class="flex-none">
    <div class="drawer drawer-end">
      <input id="mobile-drawer" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content">
        <label for="mobile-drawer" aria-label="open sidebar" class="btn btn-square btn-ghost">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            class="inline-block h-6 w-6 stroke-current">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </label>
      </div>
      <div class="drawer-side z-10">
        <label for="mobile-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
        <ul class="menu bg-base-100 font-main text-lg min-h-full w-40 p-4 items-center">
          <!-- Sidebar content here -->
          <li><a>navigation</a></li>
          <li><a>navigation</a></li>
          <li><a>navigation</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>

  <!-- This header applies for wide devices -->
  <div class="navbar max-md:hidden">
    <div class="flex-1">
      <a class="text-xl font-main px-4">Logo</a>
      <span class="text-xl font-main">{SITE.COMPANY}</span>
    </div>
    <div class="flex-none">
      <ul class="menu menu-horizontal font-main text-lg px-2 py-0">
        <li><a>navigation</a></li>
        <li><a>navigation</a></li>
        <li><a>navigation</a></li>
      </ul>
    </div>
  </div>
</header>
